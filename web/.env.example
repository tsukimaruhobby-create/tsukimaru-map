############################################
# 1. データベース設定 (Neon / PostgreSQL)
# 参照: /app/api/utils/sql.ts
############################################

# Neon のダッシュボードで発行される Connection String を指定します
# 実際の値は .env.local にのみ記載してください
DATABASE_URL="postgresql://USER:PASSWORD@HOST/DATABASE?sslmode=require"


############################################
# 2. 認証設定（管理者判定・JWT 用）
# 参照:
# - /app/api/auth/token/route.ts
# - /app/api/posts/[id]/route.ts
############################################

# 管理者として扱うメールアドレス
# 例: your-email@example.com
ADMIN_EMAIL="your-email@example.com"

# 32文字以上のランダムな文字列（JWT署名用）
# 本番では必ず十分に強い値を設定してください
AUTH_SECRET="your-super-secret-auth-key-at-least-32-characters"

# 認証用のアプリURL
# 開発環境: http://localhost:3000
# 本番環境: https://your-app-name.vercel.app
AUTH_URL="http://localhost:3000"


############################################
# 3. 画像アップロード設定
# 参照: /app/api/utils/upload.ts
############################################

# 画像アップロード先の API エンドポイント
# 例: https://api.example.com/upload
UPLOAD_API_URL="https://api.example.com/upload"

# アップロードAPIが要求する APIキー
# （不要な場合は空文字でもOK）
UPLOAD_API_KEY=""


############################################
# 4. アプリ全体の設定
############################################

# 実行環境
# development | production
NODE_ENV="development"

# アプリのオリジン（セキュリティ用途）
NEXT_PUBLIC_APP_ORIGIN="http://localhost:3000"
